<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.logz.apollo.dao.UserDao">

    <select id="getUser" resultType="io.logz.apollo.auth.User">
        SELECT *
        FROM users
        WHERE email_address = #{emailAddress}
    </select>

    <select id="getAllUsers" resultType="io.logz.apollo.auth.User">
        SELECT first_name, last_name, email_address, is_admin
        FROM users
    </select>

    <insert id="addUser">
        INSERT INTO users
        VALUES (#{emailAddress}, #{firstName}, #{lastName}, #{hashedPassword}, #{isAdmin})
    </insert>
</mapper>
