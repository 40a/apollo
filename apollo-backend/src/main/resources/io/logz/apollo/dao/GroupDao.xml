<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.logz.apollo.dao.GroupDao">
    <select id="getGroup" resultType="io.logz.apollo.auth.Group">
        SELECT *
        FROM groups
        WHERE id = #{id}
    </select>

    <select id="getAllGroups" resultType="io.logz.apollo.auth.Group">
        SELECT *
        FROM groups
    </select>

    <insert id="addGroup" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO groups (name)
        VALUES (#{name})
    </insert>
</mapper>
