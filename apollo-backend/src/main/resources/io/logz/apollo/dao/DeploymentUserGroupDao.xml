<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.logz.apollo.dao.DeploymentUserGroupDao">
    <select id="getAllDeploymentUserGroupsByUser" resultType="io.logz.apollo.auth.DeploymentUserGroup">
        SELECT *
        FROM deployment_user_groups
        WHERE user_email = #{userEmail}
    </select>

    <select id="getAllDeploymentUserGroups" resultType="io.logz.apollo.auth.DeploymentUserGroup">
        SELECT *
        FROM deployment_user_groups
    </select>

    <insert id="addDeploymentUserGroup">
        INSERT INTO deployment_user_groups (user_email, deployment_group_id)
        VALUES (#{userEmail}, #{deploymentGroupId})
    </insert>
</mapper>
