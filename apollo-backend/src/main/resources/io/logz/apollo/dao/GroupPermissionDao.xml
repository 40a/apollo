<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.logz.apollo.dao.GroupPermissionDao">
    <select id="getAllGroupPermissionsByGroup" resultType="io.logz.apollo.auth.GroupPermission">
        SELECT *
        FROM group_permissions
        WHERE group_id = #{groupId}
    </select>

    <select id="getAllGroupPermissions" resultType="io.logz.apollo.auth.GroupPermission">
        SELECT *
        FROM group_permissions
    </select>

    <insert id="addGroupPermission">
        INSERT INTO group_permissions (group_id, permission_id)
        VALUES (#{groupId}, #{permissionId})
    </insert>
</mapper>
